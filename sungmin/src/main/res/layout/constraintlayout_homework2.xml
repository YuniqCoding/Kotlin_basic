<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/test1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/test2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/test2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/purple_700"
        app:layout_constraintEnd_toStartOf="@id/test3"

        app:layout_constraintStart_toEndOf="@id/test1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/design_default_color_error"
        android:id="@+id/test3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/test2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="138dp"
        android:layout_height="530dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_weight="0."
        android:background="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/test1"
        app:layout_constraintVertical_weight="2"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="138dp"
        android:layout_height="530dp"
        android:orientation="vertical"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test2"
        app:layout_constraintVertical_weight="2"/>

    <LinearLayout
        android:layout_width="138dp"
        android:layout_height="530dp"
        android:orientation="vertical"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/test3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="2"/>




</androidx.constraintlayout.widget.ConstraintLayout>