<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="291dp"
        android:layout_height="73dp"
        app:srcCompat="@drawable/page_1"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="208dp" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="413dp"
        android:layout_height="334dp"
        app:srcCompat="@drawable/sandwich_bg_1"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="493dp" />

    <LinearLayout
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/blue_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            app:srcCompat="@drawable/logo_fb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="페이스북 계정으로 로그인"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingTop="30dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/yellow_background"
        app:layout_constraintTop_toBottomOf="@id/text1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="149dp"
            android:layout_height="92dp"
            app:srcCompat="@drawable/logo_kt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="카카오 계정으로 로그인"
            android:gravity="center"/>



    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arrows"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="522dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="116dp"
        android:text="회원가입 건너뛰고 레시피 확인하기"
        app:layout_constraintStart_toEndOf="@id/imageView4"
        app:layout_constraintTop_toBottomOf="@id/text1" />


</androidx.constraintlayout.widget.ConstraintLayout>